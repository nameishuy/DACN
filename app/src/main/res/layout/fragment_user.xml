<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redpolygon" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="480dp"
        android:layout_marginTop="250dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26dp"
            android:text="Thông tin tài khoản"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_phone"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Số điện thoại"/>

        <TextView
            android:id="@+id/UserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="140dp"
            android:text="0977998804"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_calendar"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Ngày Sinh"/>

        <TextView
            android:id="@+id/UserBirtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="230dp"
            android:text="26/06/2021"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_country"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Địa Chỉ"/>

        <TextView
            android:id="@+id/UserRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="310dp"
            android:text="Đảo Izuma"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_pencil" />

        <TextView
            android:id="@+id/btnUpdateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="30dp"
            android:text="Cập Nhật Thông Tin"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="146dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:background="@drawable/round_info">

            <TextView
                android:id="@+id/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:text="Raiden Shogun"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@drawable/circle">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circle2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/UserInfoImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>