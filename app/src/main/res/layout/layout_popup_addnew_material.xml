<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_popup1"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/round_popup2"
        android:text="Thêm Gia Vị Mới "
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp">

        <EditText
            android:id="@+id/inputANewMaterial"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/round_textinput_add"
            android:fontFamily="sans-serif-light"
            android:hint="Tên Gia Vị: Muối"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddANewMaterial"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@color/orange"
                android:text="Thêm"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnExitAddNewMaterial"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:background="@color/teal_200"
                android:text="Thoát"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>