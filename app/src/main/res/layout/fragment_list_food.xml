<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListFoodFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/red"
        android:id="@+id/headView">
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnBack"
            android:background="@drawable/ic_back"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@+id/headView"
        android:id="@+id/noFound"
        android:layout_marginTop="-30dp"
        android:elevation="1dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sorrycat"
            android:layout_centerInParent="true"
            android:id="@+id/imgCat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCat"
            android:text="Hiện chưa có món ăn nào được thêm vào loại này!"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="-50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bordertop"
        android:layout_below="@+id/headView"
        android:layout_marginTop="-62dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewFoods"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:id="@+id/Logo"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp" />
    </RelativeLayout>
</RelativeLayout>