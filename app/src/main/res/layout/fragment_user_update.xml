<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUpdateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redpolygon" />

    </LinearLayout>
    <Button
        android:id="@+id/btnUpdateImageToImgur"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/round_bgbutton"
        android:padding="10dp"
        android:text="Xác nhận ảnh"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <View
        android:id="@+id/btnBackToHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="480dp"
        android:layout_marginTop="250dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/inputUpNameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Cập Nhật Tên Tài Khoản"
            android:inputType="text"
            android:padding="14dp" />

        <EditText
            android:id="@+id/inputUpPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/round_border"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Cập nhật số điện thoại"
            android:inputType="text"
            android:padding="14dp" />

        <EditText
            android:id="@+id/inputUpBirthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/round_border"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Cập nhật ngày sinh"
            android:inputType="text"
            android:padding="14dp" />

        <View
            android:id="@+id/btnCalendarChoose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="355dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/inputUpRegionUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:background="@drawable/round_border"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Cập nhật địa chỉ"
            android:inputType="text"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnUpdateNewInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:background="@drawable/round_bgbutton"
            android:padding="10dp"
            android:text="Cập Nhật"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/circle">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle2">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/UpInfoImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/circle"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="125dp">
        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circle2"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp">
            <View
                android:id="@+id/btnUpdateImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_camera_white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>