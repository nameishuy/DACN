<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_popup1"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/round_popup2"
        android:text="Thêm Loại Thức Ăn Mới "
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="45dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/NewFoodTypeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cook_art2" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:background="@drawable/round_addfood">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_camera_white"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btnAddImageFoodType"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="3dp"
                android:text="Thêm ảnh"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/inputANewFoodType"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@drawable/round_textinput_add"
            android:fontFamily="sans-serif-light"
            android:hint="Tên Loại: Món Khai Vị"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddANewFoodType"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@color/red"
                android:text="Thêm"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnExitAddNewFoodType"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:background="@color/teal_200"
                android:text="Thoát"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="167dp"
            android:background="@drawable/round_bgaddbutton">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/ProgressFoodType"
                android:layout_width="360dp"
                android:layout_height="20dp"
                android:indeterminate="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>