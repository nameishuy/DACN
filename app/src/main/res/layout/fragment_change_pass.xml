<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:id="@+id/btnBackToHomeFromChangeFragment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Thay Đổi Mật Khẩu"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/logo"
        android:elevation="6dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="1240dp"
        android:layout_marginTop="100dp"
        android:background="@color/teal_100">

        <EditText
            android:id="@+id/inputOldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_textinput_add"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Mật khẩu củ"
            android:inputType="textPassword"
            android:padding="14dp" />

        <EditText
            android:id="@+id/inputNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:background="@drawable/round_textinput_add"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:padding="14dp" />

        <EditText
            android:id="@+id/inputNewPasswordConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:background="@drawable/round_textinput_add"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:ems="14"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:background="@drawable/round_bgbutton"
            android:padding="10dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>